<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_simple_label2x7_custom" inherit_id="product.report_simple_label2x7">
        <!-- استخدام طريقة أكثر موثوقية للتجاوز - استبدال القالب بالكامل -->
        <xpath expr="//div[hasclass('col-4')]" position="replace">
            <div class="col-4" t-att-style="'padding: 10px; border: 1px solid #ddd; margin-bottom: 20px; page-break-inside: avoid;' + (docs_count % 2 == 0 and ' page-break-after: always;' or '')">
                <div class="row">
                    <div class="col-12 text-center">
                        <!-- إظهار اسم المنتج مباشرة بدون عنوان "معلومات الضمان للمنتج" -->
                        <span class="text-nowrap" t-esc="product.get_warranty()"/>
                        
                        <!-- تم إزالة "رمز التكلفة للمنتج" وبياناته -->
                        
                        <div class="row">
                            <div class="col-6">
                                <span class="text-nowrap" t-field="product.default_code"/>
                            </div>
                            <div class="col-6 text-right">
                                <span class="text-nowrap" t-field="product.barcode"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <t t-if="product.barcode">
                                    <img alt="Barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', product.barcode, 600, 150)" style="width:100%;height:20%;"/>
                                    <span t-field="product.barcode"/>
                                </t>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 text-right">
                                <strong><span t-field="product.lst_price" t-options="{'widget': 'monetary', 'display_currency': product.currency_id}"/></strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
