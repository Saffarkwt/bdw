<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_simple_label2x7_custom" inherit_id="product.report_simple_label2x7">
        <!-- استهداف div.o_label_extra_data لتعديل المحتوى الإضافي -->
        <xpath expr="//div[hasclass('o_label_extra_data')]" position="replace">
            <div class="o_label_extra_data">
                <!-- إزالة عنوان معلومات الضمان مع الاحتفاظ بالبيانات -->
                <t t-if="product.get_warranty">
                    <span t-esc="product.get_warranty()"/>
                </t>
                <!-- تم إزالة رمز التكلفة وبياناته تماماً -->
            </div>
        </xpath>
    </template>
</odoo>
