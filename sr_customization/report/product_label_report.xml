<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_simple_label2x7_custom" inherit_id="product.report_simple_label2x7">
        <!-- إزالة عنوان معلومات الضمان مع الاحتفاظ بالبيانات -->
        <xpath expr="//span[contains(text(), 'معلومات الضمان للمنتج')]" position="replace">
            <!-- تم إزالة العنوان -->
        </xpath>
        
        <!-- إزالة رمز التكلفة وبياناته -->
        <xpath expr="//span[contains(text(), 'رمز التكلفة للمنتج')]" position="replace">
            <!-- تم إزالة العنوان -->
        </xpath>
        <xpath expr="//span[@t-esc='product.get_cost_code()']" position="replace">
            <!-- تم إزالة البيانات -->
        </xpath>
    </template>
</odoo>
