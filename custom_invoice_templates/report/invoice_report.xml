<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sales Invoice Report -->
    <record id="action_report_sales_invoice" model="ir.actions.report">
        <field name="name">Sales Invoice</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_invoice_templates.report_sales_invoice</field>
        <field name="report_file">custom_invoice_templates.report_sales_invoice</field>
        <field name="print_report_name">(object._get_report_base_filename())</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
        <field name="binding_view_types">form</field>
    </record>

    <!-- Purchase Invoice Report -->
    <record id="action_report_purchase_invoice" model="ir.actions.report">
        <field name="name">Purchase Invoice</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_invoice_templates.report_purchase_invoice</field>
        <field name="report_file">custom_invoice_templates.report_purchase_invoice</field>
        <field name="print_report_name">(object._get_report_base_filename())</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
        <field name="binding_view_types">form</field>
    </record>
</odoo>
