<?xml version="1.0"?>
<odoo>
    <template id="report_label4x12_inherited" inherit_id="product.report_simple_label4x12">
        <xpath expr="//div[hasclass('o_label_name')]" position="replace">
            <div class="o_label_name">
                <span class="text-nowrap" t-esc="product.get_warranty()"/>
                <br/>
                <span class="text-nowrap" t-esc="product.get_cost_code()"/>
            </div>
        </xpath>
    </template>
