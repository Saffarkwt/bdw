<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Receipt Template -->
    <template id="report_receipt">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
                    
                    <div class="page" style="font-size: 16px; background-color: #f5f9f5;">
                        <!-- Header with Logo and Company Info -->
                        <div class="row mb-3">
                            <div class="col-4 text-center">
                                <img src="/receipt_print_module/static/description/blue_diamond_logo.png" style="max-height: 70px;" t-if="o.company_id.logo"/>
                            </div>
                            <div class="col-8 text-right">
                                <h3 style="margin-bottom: 0;">Blue Diamond الماسة الزرقاء</h3>
                                <p style="margin-bottom: 0;">بيع - شراء - تثمين الساعات الثمينة</p>
                                <div class="mt-2">
                                    <strong>Name : </strong><span t-field="o.partner_id.name"/><br/>
                                    <strong>Phone : </strong><span t-field="o.partner_id.phone"/><br/>
                                    <strong>Civil ID : </strong><span t-field="o.partner_id.vat"/>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Barcode and Receipt Title -->
                        <div class="row mb-4 text-center">
                            <div class="col-12">
                                <img t-att-src="'/report/barcode/Code128/'+o.name" style="width:300px;height:50px;"/>
                                <h2 class="mt-2">Display Receipt</h2>
                            </div>
                        </div>
                        
                        <!-- Receipt Information -->
                        <div class="row mb-3">
                            <div class="col-6">
                                <strong>Created By:</strong>
                                <p class="m-0" t-field="o.user_id"/>
                            </div>
                            <div class="col-6 text-right">
                                <strong>Source:</strong>
                                <p class="m-0" t-field="o.invoice_origin"/>
                            </div>
                        </div>
                        
                        <!-- Product Details Table -->
                        <table class="table table-sm table-bordered" style="font-size: 14px;">
                            <thead style="background-color: #f8f9fa;">
                                <tr>
                                    <th class="text-left" style="width: 5%;">Sr no.</th>
                                    <th class="text-left" style="width: 35%;">Description</th>
                                    <th class="text-left" style="width: 15%;">Serial No</th>
                                    <th class="text-left" style="width: 15%;">Model No</th>
                                    <th class="text-right" style="width: 15%;">Quantity</th>
                                    <th class="text-right" style="width: 15%;">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="sr_no" t-value="0"/>
                                <t t-foreach="o.invoice_line_ids" t-as="line">
                                    <tr>
                                        <td>
                                            <t t-set="sr_no" t-value="sr_no+1"/>
                                            <span t-esc="sr_no"/>
                                        </td>
                                        <td>
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="line.product_id.barcode"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="line.product_id.default_code"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.quantity"/>
                                            <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.price_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        
                        <!-- Total Section -->
                        <div class="row">
                            <div class="col-6"></div>
                            <div class="col-6">
                                <table class="table table-sm">
                                    <tr>
                                        <td class="text-right"><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                </table>
                                <p class="text-right">
                                    <strong>Total Amount: </strong>
                                    <span t-field="o.amount_total_words"/>
                                </p>
                            </div>
                        </div>
                        
                        <!-- Terms and Conditions -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <h5 class="text-right">الشروط والأحكام</h5>
                                <p class="text-right">إقرار من العميل</p>
                                <ol class="text-right" style="direction: rtl;">
                                    <li>أقر أنا المذكور اسمي أعلاه بأن القطعة المعروضة عائد لي/مملوكة لي وليست مسروقة أو مقلدة ولا يوجد أي استرجاع ما هو مباع مرة واحدة وأتحمل المسؤولية الكاملة 1.</li>
                                    <li>في حالة طلب استرداد القطعة المعروضة على صاحب المقتنى/ صاحب القطعة المدنية المذكور أعلاه الحضور وإبراز البطاقة المدنية وتسليم إيصال العرض لاستلام المبيع 2.</li>
                                    <li>الماسة الزرقاء غير مسئولة عن الاضرار أو فقدان الذي يلحق بالمبيع في حال عدم استلام صاحب القطعة المعروضة/ صاحب البطاقة المدنية المذكور أعلاه في حال تجاوز مدة العرض عن 3 شهور.</li>
                                </ol>
                                
                                <h5>TERMS & CONDITIONS</h5>
                                <p>Customer's Declaration</p>
                                <ol>
                                    <li>I, above-mentioned name, declare that the items displayed belongs to me and it's not been stolen or inauthentic, and I do not have the rights to take the items displayed back after selling. Additionally, I take full responsibility in case of violation in conformity with rules, laws, and regulation etc. In State of Kuwait. Moreover, I promise to return the amount received in full whether the items sold are fake (inauthentic), stolen, or it has any defects or faults.</li>
                                    <li>In case the owner of the item requested to return his displayed item, he must attend into the shop in person and show his identification and return the receipt.</li>
                                    <li>Blue Diamond is not responsible for any damage or loss of the displayed item if the owner has not retrieved his belongings (items displayed) for more than 3 months.</li>
                                </ol>
                            </div>
                        </div>
                        
                        <!-- Signature Section -->
                        <div class="row mt-5">
                            <div class="col-6 text-right">
                                <p>الاسم</p>
                                <div style="border-bottom: 1px solid black; height: 30px;"></div>
                            </div>
                            <div class="col-6 text-right">
                                <p>التوقيع</p>
                                <div style="border-bottom: 1px solid black; height: 30px;"></div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
