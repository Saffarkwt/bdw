<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- HR Employee Form View Inheritance -->
        <record id="hr_employee_view_form_inherit_eos" model="ir.ui.view">
            <field name="name">hr.employee.view.form.inherit.eos</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button name="action_view_eos_requests" type="object" class="oe_stat_button" icon="fa-file-text-o">
                        <field name="eos_request_count" widget="statinfo" string="EOS Requests"/>
                    </button>
                </div>
                <xpath expr="//field[@name='identification_id']" position="after">
                    <field name="employee_number"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
