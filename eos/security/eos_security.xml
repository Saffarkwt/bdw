<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- EOS Security Groups -->
        <record id="group_eos_user" model="res.groups">
            <field name="name">EOS User</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="implied_ids" eval="[(4, ref('hr.group_hr_user'))]"/>
        </record>

        <record id="group_eos_manager" model="res.groups">
            <field name="name">EOS Manager</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="implied_ids" eval="[(4, ref('group_eos_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- EOS Record Rules -->
        <record id="eos_request_comp_rule" model="ir.rule">
            <field name="name">EOS Request: Multi-company rule</field>
            <field name="model_id" ref="model_eos_request"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="eos_reason_comp_rule" model="ir.rule">
            <field name="name">EOS Reason: Multi-company rule</field>
            <field name="model_id" ref="model_eos_reason"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="eos_settings_comp_rule" model="ir.rule">
            <field name="name">EOS Settings: Multi-company rule</field>
            <field name="model_id" ref="model_eos_settings"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <!-- EOS User Access Rules -->
        <record id="eos_request_user_rule" model="ir.rule">
            <field name="name">EOS Request: User can see only their own requests</field>
            <field name="model_id" ref="model_eos_request"/>
            <field name="groups" eval="[(4, ref('group_eos_user'))]"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- EOS Manager Access Rules -->
        <record id="eos_request_manager_rule" model="ir.rule">
            <field name="name">EOS Request: Manager can see all requests</field>
            <field name="model_id" ref="model_eos_request"/>
            <field name="groups" eval="[(4, ref('group_eos_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
    </data>
</odoo>
